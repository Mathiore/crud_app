<form action="/" method="POST" id="update_user">
    <div class="novo-user">
        <div class="form-group">
            <label for="name" class="">Nome Completo:</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="">
        </div>
        <div class="form-group">
            <label for="Email">Email:</label>
            <input type="text" name="email" value="" placeholder="exemplo@mail.com">
        </div>
        <div class="form-group">
            <label for="Cpf">CPF:</label>
            <input type="text" name="cpf" value="" placeholder="___.___.___-__">
        </div>
        <div class="form-group">
            <label for="Endereco">Endereço:</label>
            <input type="text" name="endereco" value="">
        </div>
        <div class="form-group">
            <label for="Funcao">Função</label>
            <input type="text" name="funcao" value="">
        </div>
        <div class="form-group">
            <label for="Turno">Turno:</label>
            <div class="radio inline">
                <label for="matutino">Matutino</label>
                <input type="radio" value="Matutino" name="turno" id="matutino">   
            </div>
            <div class="radio inline">
                <label for="vespertino">Vespertino</label>
                <input type="radio" value="Vespertino" name="turno" id="vespertino">
            </div>
            <div class="radio inline">
                <label for="noturno">Noturno</label>
                <input type="radio" value="Noturno" name="turno" id="noturno">
            </div>
        </div>
        <div class="form-group">
            <label for="Salario">Salário:</label>
            <input type="text" name="salario" value="">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Adicionar</button>
        </div>
    </div>
</form>